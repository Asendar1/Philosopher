{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Philosophers",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/philo/philo",
            "args": ["4", "800", "200", "200", "4"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/philo",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}
